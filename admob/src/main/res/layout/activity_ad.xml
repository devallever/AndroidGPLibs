<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:tint="#000000"
        android:src="@drawable/icon_back"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/ivBack"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:text="load Inter"
                android:id="@+id/btnLoadInter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:text="load Reward"
                android:id="@+id/btnLoadReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDismissDelay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:text="dismiss delay: "/>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/dismissProgress"
                android:paddingVertical="20dp"
                android:max="45"
                android:min="4"
                android:progress="4"
                android:layout_marginHorizontal="20dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvNextLoadDelay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:text="next load delay: "/>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/nextLoadProgress"
                android:paddingVertical="20dp"
                android:max="100"
                android:min="15"
                android:progress="15"
                android:layout_marginHorizontal="20dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvBannerShowCount"
                android:padding="10dp"
                android:gravity="center"
                android:text="banner show count: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvBannerClickCount"
                android:padding="10dp"
                android:gravity="center"
                android:text="banner click count: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvInterShowCount"
                android:padding="10dp"
                android:gravity="center"
                android:text="inter show count: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvInterClickCount"
                android:padding="10dp"
                android:gravity="center"
                android:text="inter click count: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvRewardShowCount"
                android:padding="10dp"
                android:gravity="center"
                android:text="reward show count: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvRewardClickCount"
                android:padding="10dp"
                android:gravity="center"
                android:text="reward click count: 0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/nativeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>